    maximum_instance_count = 100
  },
  {
    name    = "fn-testclient-api-dev"
    runtime = "dotnet-isolated"
    version = "8.0"
    app_settings = [
      {
        name  = "Environment"
        value = "Development"
      }
    ]
    instance_memory_mb     = 2048
    maximum_instance_count = 50
  }
]


