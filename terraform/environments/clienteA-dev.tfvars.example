}

# Azure Functions Linux (Flex Consumption)
functions_linux = [
  {
    name    = "fn-testclient-processor-dev"
    runtime = "dotnet-isolated"
    version = "8.0"
    app_settings = [
      {
        name  = "ServiceBusConnection__fullyQualifiedNamespace"
